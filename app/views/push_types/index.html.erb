<div class="center jumbotron" align="center" style="background-color:#82FFFF;margin-top:-3%;">
  <h2>类型列表</h2>
  <br>
  <table>
    <% @push_types.each do |push_type| %>
      <tr>
        <td width="100">
          <div class="lead">
            <h3><%= push_type.name %></h3>
          </div>
        </td>
        <td width="73">
          <%= link_to push_type, :class => "btn btn-default btn-lg active" do %>
            <h4>查看</h4>
          <% end %>
        </td>
        <td width="73">
          <%= link_to edit_push_type_path(push_type), :class => "btn btn-default btn-lg active" do %>
            <h4>编辑</h4>
          <% end %>
        </td>
        <td width="73">
          <%= link_to push_type, method: :delete, data: { confirm: '确定删除该类型?' }, :class => "btn btn-default btn-lg active" do %>
            <h4>删除</h4>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>

  <br>
  <br>
  <table>
    <th width="200">
      <%= link_to new_push_type_path, :class => "btn btn-primary btn-lg active" do %>
        <h4>新建</h4>
      <% end %>
    </th>
    <th>
      <%= link_to data_charge_index_path, :class => "btn btn-primary btn-lg active" do %>
        <h4>返回</h4>
      <% end %>
    </th>
  </table>
</div>

