<div class="center jumbotron" align="center" style="background-color:#82FFFF;margin-top:-3%;">
  <div class="lead">
    <h3>名称 : <%= @competitor.name %></h3>
  </div>

  <div class="lead">
    <h3>英文别名 : <%= @competitor.alias %></h3>
  </div>

  <div class="lead">
    <h3>Logo : </h3>
    <%= image_tag(@competitor.logo) %>
  </div>

  <br>
<table>
  <th width="200">
    <%= link_to edit_competitor_path(@competitor), :class => "btn btn-primary btn-lg active" do %>
      <h4>编辑</h4>
    <% end %>
  </th>
  <th width="200">
    <%= link_to new_competitor_path, :class => "btn btn-primary btn-lg active" do %>
      <h4>新建</h4>
    <% end %>
  </th >
  <th>
    <%= link_to competitors_path, :class => "btn btn-primary btn-lg active" do %>
      <h4>返回</h4>
    <% end %>
  </th>
</table>
</div>
