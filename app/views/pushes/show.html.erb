<div class="center jumbotron" align="center" style="background-color:#82FFFF;margin-top:-3%;">
  <div class="lead">
    <h4>公司 : <%= competitor_name(@push) %></h4>
    <h4>类型 : <%= type_name(@push) %></h4>
  </div>
  <div class="lead">
    <h4>时间 : <%= @push.p_date.to_s %></h4>
  </div>
  <div class="lead">
    <h4>内容 : <%= @push.content %></h4>
  </div>

<br>
<table>
  <th width="200">
    <%= link_to edit_push_path(@push), :class => "btn btn-primary btn-lg active" do %>
      <h4>编辑</h4>
    <% end %>
  </th>
  <th width="200">
    <%= link_to new_push_path, :class => "btn btn-primary btn-lg active" do %>
      <h4>新建</h4>
    <% end %>
  </th >
  <th>
    <%= link_to pushes_path, :class => "btn btn-primary btn-lg active" do %>
      <h4>返回</h4>
    <% end %>
  </th>
</table>
</div>
